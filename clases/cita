import datetime

class Cita ():
    def __init__(self,fechaCita,medico,consultorio):
        self._noCita = 0
        self._vigencia = 0
        self._fechaCreacion = datetime.datetime.now()
        self._fechaCita = fechaCita
        self._medico = medico
        self._consultorio = consultorio
        self.setVigencia()
     
    def setNoCita(self):
        pass 
    
    def setVigencia(self):
        a単o = self._fechaCita.year
        mes = self._fechaCita.month
        dia = self._fechaCita.day + 20

        if dia > 29 :
            dia = dia - 29
            mes = mes + 1
            if mes > 12:
                mes = 1
                a単o = a単o + 1
        self._vigencia = datetime.date(a単o, mes, dia)        
        
    def getNoCita(self):
        return self._noCita
    
    def getVigencia(self):
        return self._vigencia
    
    def getFechaCreacion(self):
        return self._fechaCreacion

    def getFechaCita(self):
        return self._fechaCita
    
l = datetime.date(2024,9,22)    
    
p = Cita(l,"pene","c12")

print(p.getVigencia())
        